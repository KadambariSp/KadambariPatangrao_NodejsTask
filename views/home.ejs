<!DOCTYPE html>
<html lang="en">

<head>
    <meta charset="UTF-8">
    <meta http-equiv="X-UA-Compatible" content="IE=edge">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <!-- CSS only -->
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.2.0-beta1/dist/css/bootstrap.min.css" rel="stylesheet" integrity="sha384-0evHe/X+R7YkIZDRvuzKMRqM+OrBnVFBL6DOitfPri4tjfHxaWutUpFmBp4vmVor" crossorigin="anonymous">
    <title>NodeJs task</title>
</head>

<body>
    <div class="container">
        <h1 style="align-items:center;">NodeJs task using Express / MySQL </h1>
        <a href="/save" class="btn btn-primary btn-sm" style="float:right;">Register psychiatrist</a>

        <table class="table table-dark table-striped table-responsive" style="margin-top: 50px;">
            <thead>

                <tr>
                    <th>Id</th>
                    <th>First Name</th>
                    <th>Last Name</th>
                    <th>Hospital Name</th>
                    <th>Phone Number</th>
                    <th>State</th>
                    <th>Pincode</th>
                    <th>Action</th>
                    <th>Count of patients</th>
                    <th>Psy List</th>

                </tr>
            </thead>
            <tbody>
                <%users.forEach(function(user){%>
                    <tr>
                        <td>
                            <%= user.id%>
                        </td>
                        <td>
                            <%= user.FirstName%>
                        </td>
                        <td>
                            <%= user.LastName%>
                        </td>
                        <td>
                            <%= user.HospitalName%>
                        </td>
                        <td>
                            <%= user.PhoneNumber%>
                        </td>
                        <td>
                            <%= user.State%>
                        </td>
                        <td>
                            <%= user.Pincode%>
                        </td>
                        <td>
                            <a href="addPatient/<%= user.id %>" class="btn btn-warning">Add patient</a>
                            <a href="viewPatients/<%= user.id%>" class="btn btn-warning">All patients</a>
                        </td>
                        <td><a href="countPatient/<%= user.id%>" class="btn btn-danger">Count</a></td>
                        <td><a href="getPsy/<%=user.id%>" class="btn btn-warning">Psy list</a></td>
                    </tr>
                    <% }); %>

            </tbody>

        </table>
    </div>

</body>

</html>